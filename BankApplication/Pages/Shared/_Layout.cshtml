                <h1 class="sitename">Bank</h1>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a asp-page="/Index" class="@(Context.Request.Path == "/" ? "active" : "")">Home</a></li>

                    @if (User.Identity.IsAuthenticated)
