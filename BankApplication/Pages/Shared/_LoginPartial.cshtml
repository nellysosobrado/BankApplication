
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="dropdown nav-auth-item">
        <a href="#" class="nav-auth-link dropdown-toggle" data-bs-toggle="dropdown">
            <i class="bi bi-person-circle"></i>
            <span class="nav-auth-text d-none d-lg-inline">@User.Identity?.Name</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end">
            <li>
                <a class="dropdown-item" asp-page="/Customers">
                    <i class="bi bi-person me-2"></i>Dashboard
                </a>
            </li>

            <li><hr class="dropdown-divider"></li>
            <li>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index")" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="dropdown-item">
                        <i class="bi bi-box-arrow-right me-2"></i>Logga ut
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-auth-item">
        <a asp-area="Identity" asp-page="/Account/Login" class="nav-auth-link">
            <i class="bi bi-box-arrow-in-right"></i>
            <span class="nav-auth-text d-none d-lg-inline">Logga in</span>
        </a>
    </li>
}