<!DOCTYPE html>
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/asset2/css/site.css" asp-append-version="true" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <title>@ViewData["Title"]</title>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="grid-container">
        <header class="header">
            <div class="header__avatar">
                <i class='bx bx-user-circle'></i>
                <span class="nav-auth-text d-none d-lg-inline"> @User.Identity?.Name</span>
            </div>
        </header>

        <aside class="sidenav">
            <div class="sidenav__logo">
                <i class='bx bxs-dashboard'></i>
                <span class="sidenav__logo_name">Dashboard</span>
            </div>
            <ul class="sidenav__list">

                @if (User.IsInRole("Admin") || User.IsInRole("Cashier"))
                {
                    <li class="sidenav__list-item">
                        <a asp-page="/Customers">
                            <i class="bx bx-pie-chart-alt-2"></i>
                            Search Customer
                        </a>
                    </li>
                    <li class="sidenav__list-item">
                        <a asp-page="/Account/Index">
                            <i class="bx bx-pie-chart-alt-2"></i>
                            Manage Account
                        </a>
                    </li>
                    <li class="sidenav__list-item">
                        <a asp-page="/Person/Index">
                            <i class="bx bx-pie-chart-alt-2"></i>
                            Manage Info Details
                        </a>
                    </li>
                }


                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <li class="sidenav__list-item">
                        <a asp-area="Identity" asp-page="/Admin/Users/AllUsers">
                            <i class="bx bx-shield-quarter"></i>
                            <span>All Users</span>
                        </a>
                    </li>

                }

                <li class="sidenav__list-item">
                    <a href="#" onclick="document.getElementById('logoutForm').submit()">
                        <i class="bx bx-log-out"></i>
                        Logout
                    </a>
                    <form id="logoutForm" method="post" asp-page="/Account/Logout" asp-area="Identity" style="display:none;"></form>
                </li>
            </ul>

        </aside>

        <main class="main">
            @RenderBody()
        </main>

        <footer class="footer">
            <div>&copy; @DateTime.Now.Year Your Company</div>
        </footer>
    </div>

    <script src="~/asset2/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>