@page
@model BankApplication.Pages.TopCustomers.TopCustomersModel
@{
    ViewData["Title"] = $"Top 10 Customers in {Model.CountryName}";
    Layout = "_DashboardLayout"; // eller "_Layout" beroende på din struktur
}

<div class="container mt-4">
    <h2>Top 10 Customers in @Model.CountryName</h2>

    @if (Model.TopCustomers.Any())
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Accounts</th>
                    <th>Total Balance</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.TopCustomers.Count; i++)
                {
                    var c = Model.TopCustomers[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@c.FullName</td>
                        <td>@c.AccountCount</td>
                        <td>@c.TotalBalance.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info mt-3">
            No customers found for country: <strong>@Model.CountryName</strong>.
        </div>
    }
</div>
