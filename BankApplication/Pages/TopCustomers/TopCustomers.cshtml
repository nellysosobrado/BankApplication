@page
@model BankApplication.Pages.TopCustomers.TopCustomersModel
@{
    ViewData["Title"] = $"Top 10 Customers in {Model.CountryName}";
    Layout = "_DashboardLayout";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">
            <i class="fas fa-users"></i> Top 10 Customers in @Model.CountryName
        </h2>
        
    </div>

    @if (Model.TopCustomers.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Full Name</th>
                            <th scope="col">Accounts</th>
                            <th scope="col">Total Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.TopCustomers.Count; i++)
                        {
                            var c = Model.TopCustomers[i];
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@c.FullName</td>
                                <td>@c.AccountCount</td>
                                <td><span class="fw-semibold text-success">@c.TotalBalance.ToString("C")</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <i class="fas fa-exclamation-circle"></i> No customers found for <strong>@Model.CountryName</strong>.
        </div>
    }
</div>
<div>
    <a onclick="history.back()" class="btn btn-outline-secondary me-2">← Go Back</a>
    <a asp-page="/Index" class="btn btn-outline-primary">🏠 Home</a>
</div>
