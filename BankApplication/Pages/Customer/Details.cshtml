@page
@model DetailsModel
@{
    ViewData["Title"] = "Customer Details";
    Layout = "_DashboardLayout";
}
<link rel="stylesheet" href="~/assets2/css/din-fil.css" />
<script src="~/assets2/js/din-fil.js"></script>

<div class="card mt-4">
    <div class="card-header">
        <h2>@Model.Customer.Name</h2>
        <small class="text-muted">Customer ID: @Model.Customer.CustomerId</small>
    </div>
    


    <div class="text-end mt-2">
        <a asp-page="/Customer/Update"
           asp-route-id="@Model.Customer.CustomerId"
           class="btn btn-outline-primary">
            <i class="fas fa-edit"></i> Edit / Update information
        </a>
    </div>
    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this customer?');">
        <input type="hidden" name="CustomerId" value="@Model.Customer.CustomerId" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt me-1"></i> Delete customer
        </button>
    </form>


    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-5">Personnummer</dt>
                    <dd class="col-sm-7">@Model.Customer.Personnummer</dd>

                    <dt class="col-sm-5">Adress</dt>
                    <dd class="col-sm-7">@Model.Customer.Address</dd>

                    <dt class="col-sm-5">Postnummer</dt>
                    <dd class="col-sm-7">@Model.Customer.PostalCode</dd>

                    <dt class="col-sm-5">Stad</dt>
                    <dd class="col-sm-7">@Model.Customer.City</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-5">Land</dt>
                    <dd class="col-sm-7">@Model.Customer.Country</dd>

                    <dt class="col-sm-5">Telefon</dt>
                    <dd class="col-sm-7">@Model.Customer.Phone</dd>

                    <dt class="col-sm-5">E-post</dt>
                    <dd class="col-sm-7">@Model.Customer.EmailAddress</dd>
                </dl>
            </div>
        </div>

        <div class="mb-3">
            <strong>Total Saldo:</strong>
            <span class="badge bg-success fs-6">@Model.TotalBalance.ToString("C")</span>
        </div>

        <h4>Konton <span class="badge bg-primary">@Model.Customer.Dispositions.Count()</span></h4>

        @if (Model.Customer.Dispositions.Any())
        {
            <div class="table-responsive mt-3">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Account ID</th>
                            <th>Frequency</th>
                            <th>Balance</th>
                            <th>Status</th>
                            <th>Created</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var disp in Model.Customer.Dispositions)
                        {
                            <tr>
                                <td>@disp.Account.AccountId</td>
                                <td>@disp.Account.Frequency</td>
                                <td>@disp.Account.Balance.ToString("C")</td>
                                <td>@disp.Type</td>
                                <td>@disp.Account.CreatedDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a asp-page="/AccountTransactions" asp-route-accountId="@disp.Account.AccountId" class="btn btn-sm btn-outline-primary">
                                        Transactions
                                    </a>
                                    <a asp-page="/Account/Withdraw"
                                       asp-route-accountId="@disp.Account.AccountId"
                                       asp-route-customerId="@Model.Customer.CustomerId"
                                       class="btn btn-sm btn-outline-warning" title="Withdraw">
                                        <i class='bx bx-money-withdraw'></i>
                                    </a>

                                    <a asp-page="/Account/Deposit"
                                       asp-route-accountId="@disp.Account.AccountId"
                                       asp-route-customerId="@Model.Customer.CustomerId"
                                       class="btn btn-sm btn-outline-success" title="Deposit">
                                        <i class='bx bx-plus-circle'></i>
                                    </a>
                                    <a asp-page="/Account/Transfer"
                                       asp-route-fromAccountId="@disp.Account.AccountId"
                                       asp-route-customerId="@Model.Customer.CustomerId"
                                       class="btn btn-sm btn-outline-info" title="Transfer">
                                        <i class='bx bx-transfer'></i>
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
        }
        else
        {
            <div class="alert alert-info mt-3">Customer does not have any registered accounts.</div>
        }
        <button onclick="history.back()" id="backPrevBtnWithText">
            <i class="fas fa-arrow-left me-1"></i> Back to previous page
        </button>
    </div>
</div>
@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}
