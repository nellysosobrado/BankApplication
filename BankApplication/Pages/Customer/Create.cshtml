@page
@model BankApplication.Pages.Customer.CreateModel
@{
    ViewData["Title"] = "Create Customer";
    Layout = "_DashboardLayout";
}
<link rel="stylesheet" href="~/asset2/css/site.css">

<div class="card">
    <div class="card-header">
        <h1>Create New Customer</h1>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.Givenname">Givenname</label>
                        <input class="form-control" asp-for="Input.Givenname" required>
                        <span asp-validation-for="Input.Givenname" class="field-validation-error"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.Surname">Surname</label>
                        <input class="form-control" asp-for="Input.Surname" required>
                        <span asp-validation-for="Input.Surname" class="field-validation-error"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Input.Gender">Gender</label>
                <select class="form-control" asp-for="Input.Gender" required>
                    <option value="">-- Select --</option>
                    <option value="Male">Man</option>
                    <option value="Female">Woman</option>
                </select>
                <span asp-validation-for="Input.Gender" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Emailaddress">Email</label>
                <input class="form-control" asp-for="Input.Emailaddress" type="email" required>
                <span asp-validation-for="Input.Emailaddress" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Streetaddress">Street Address</label>
                <input class="form-control" asp-for="Input.Streetaddress" required>
                <span asp-validation-for="Input.Streetaddress" class="field-validation-error"></span>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Input.Zipcode">Zipcode</label>
                        <input class="form-control" asp-for="Input.Zipcode" required>
                        <span asp-validation-for="Input.Zipcode" class="field-validation-error"></span>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="Input.City">City</label>
                        <input class="form-control" asp-for="Input.City" required>
                        <span asp-validation-for="Input.City" class="field-validation-error"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Input.CountryCode">Country Code</label>
                <input class="form-control" asp-for="Input.CountryCode" maxlength="2" required>
                <span asp-validation-for="Input.CountryCode" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Country">Country</label>
                <input class="form-control" asp-for="Input.Country" required>
                <span asp-validation-for="Input.Country" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Birthday">Birthday</label>
                <input class="form-control" asp-for="Input.Birthday" type="date">
                <span asp-validation-for="Input.Birthday" class="field-validation-error"></span>
            </div>

            <button type="submit" class="btn btn-success">Create</button>
        </form>
    </div>
</div>

<script src="~/asset2/js/site.js"></script>
