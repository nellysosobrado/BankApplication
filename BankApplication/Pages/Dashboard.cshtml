@page
@model BankApplication.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_DashboardLayout";
    var userName = User.Identity?.Name ?? "Employee";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-semibold text-primary">Välkommen, @userName 👋</h1>
        <p class="lead text-secondary">Du är inloggad i bankens medarbetarportal</p>
    </div>

    <div class="row g-4 justify-content-center">
        <div class="col-md-4">
            <div class="card border-0 shadow h-100">
                <div class="card-body text-center">
                    <i class="fas fa-search fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Sök kunder</h5>
                    <p class="card-text text-muted">Hitta och hantera kundinformation och konton.</p>
                    <a href="/Customers" class="btn btn-outline-primary w-100">
                        <i class="fas fa-magnifying-glass me-1"></i> Gå till sökning
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow h-100">
                <div class="card-body text-center">
                    <i class="fas fa-user-plus fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Skapa ny kund</h5>
                    <p class="card-text text-muted">Registrera en ny kund och skapa ett transaktionskonto.</p>
                    <a href="/Customer/Create" class="btn btn-success w-100">
                        <i class="fas fa-plus-circle me-1"></i> Skapa kund
                    </a>
                </div>
            </div>
        </div>

        <!-- Du kan lägga till fler kort här, t.ex. statistik eller rapporter -->
    </div>

    <div class="text-center mt-5">
        <small class="text-muted">© @DateTime.Now.Year Bank Internal System</small>
    </div>
</div>
