@page
@model BankApplication.Areas.Identity.Pages.Admin.Users.AllUsersModel
@{
    ViewData["Title"] = "Alla Användare";
    Layout = "_DashboardLayout";  // Eller vilken layout du än använder
}

<h1>Alla Användare</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roll</th>
            <th>Alternativ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a asp-area="Identity" asp-page="/Admin/Users/Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Redigera</a>
                    <a asp-area="Identity" asp-page="/Admin/Users/Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Detaljer</a>
                    <a asp-area="Identity" asp-page="/Admin/Users/Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Ta bort</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-area="Identity" asp-page="/Account/Manage/Register" class="btn btn-success">+ Skapa ny användare</a>
