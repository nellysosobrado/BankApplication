@page
@model BankApplication.Areas.Identity.Pages.Account.Manage.DeletePersonalDataModel

@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
    Layout = "_DashboardLayout";
}
@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["StatusMessage"]
    </div>
}

<h3 class="mb-4">@ViewData["Title"]</h3>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>
                    @user.UserName
                    @if (user.Id == Model.CurrentUserId)
                    {
                        <span class="badge bg-secondary ms-2">You</span>
                    }
                </td>
                <td>@user.Email</td>
                <td class="text-center">
                    @if (user.Id != Model.CurrentUserId)
                    {
                        <form method="post"
                              asp-page-handler="Delete"
                              asp-route-userId="@user.Id"
                              onsubmit="return confirm('Are you sure you want to delete @user.Email?');">
                            <button class="btn btn-sm btn-danger" type="submit">
                                <i class="fas fa-trash-alt me-1"></i> Delete
                            </button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted">Use button below</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.CurrentUserId != null)
{
    <div class="mt-4">
        <form method="post"
              asp-page-handler="DeleteMyAccount"
              onsubmit="return confirm('Are you sure you want to delete your own account? This cannot be undone.');">
            <button class="btn btn-danger">
                <i class="fas fa-user-slash me-1"></i> Delete My Account
            </button>
        </form>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
