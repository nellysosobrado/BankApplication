@page
@model BankApplication.Areas.Identity.Pages.Account.Manage.DeletePersonalDataModel

@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
    Layout = "_DashboardLayout";
}

<h3>@ViewData["Title"]</h3>

<!-- Tabell för att visa alla användare -->
<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-userId="@user.Id">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Om den inloggade användaren är på sidan, visa knappen "Delete my Account" -->
@if (Model.CurrentUserId != null)
{
    <div class="mt-3">
        <form method="post" asp-page-handler="DeleteMyAccount" class="d-inline">
            <button class="btn btn-danger" type="submit">Delete my Account</button>
        </form>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
