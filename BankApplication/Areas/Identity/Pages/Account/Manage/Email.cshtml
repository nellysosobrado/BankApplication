@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Emails";
    ViewData["ActivePage"] = ManageNavPages.Email;
    Layout = "_DashboardLayout";
}

<h3>@ViewData["Title"]</h3>

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-info">
        @Html.Raw(TempData["StatusMessage"].ToString())
    </div>
}

<div class="row">
    <div class="col-md-12">
        <h4>Existing Email Addresses</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Email Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var email in Model.UserEmails)
                {
                    <tr>
                        <td>@email.CurrentEmail</td>
                        <td>
                            <form method="post" asp-page-handler="ChangeEmail" class="d-inline">
                                <input type="hidden" name="userId" value="@email.UserId" />
                                <input type="email" name="NewEmail" class="form-control" placeholder="New email" required />
                                <button type="submit" class="btn btn-sm btn-primary">Update</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
