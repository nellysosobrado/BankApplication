@page
@model BankApplication.Areas.Admin.Pages.Users.CreateModel

@{
    ViewData["Title"] = "Skapa användare";
    Layout = "_DashboardLayout";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Skapa ny användare</h4>
        </div>
        <div class="card-body">
            <p class="text-muted">Fyll i användaruppgifter och välj roll.</p>

            <form method="post" autocomplete="off">
                <!-- E-post fält -->
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">E-post</label>
                    <input asp-for="Input.Email" type="email" class="form-control" placeholder="namn@exempel.se" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <!-- Lösenord fält -->
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Lösenord</label>
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Minst 6 tecken" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <!-- Roll fält -->
                <div class="mb-3">
                    <label asp-for="Input.Role" class="form-label">Roll</label>
                    <select asp-for="Input.Role" class="form-select">
                        <option value="">Välj roll</option>
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                    <span asp-validation-for="Input.Role" class="text-danger small"></span>
                </div>

                <!-- Submit och tillbakaknapp -->
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle me-1"></i> Skapa användare
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Tillbaka
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
